<%- include("header") -%>

    <div class="box" id="heading">
        <!-- In this way we can create a javascript variable to store user's input -->
        <h1><%= listTitle %></h1>
    </div>
    
    <h2 class="title">Add Your Tasks</h2>

    <div class="box">
        <!-- <% %> are used to write JS code in HTML file -->
        <% for( var i=0; i<newListItems.length ; i++){ %>
        <div class="item">
            <input type="checkbox">
            <p><%= newListItems[i] %></p>
        </div>
        <% } %>

        <form class="" action="/" method="post">
            <input type="text" name="newItem" placeholder="New Task" autocomplete="off">
            <button type="submit" name="list" value= <%= listTitle %>>+</button>
        </form>
    </div>

    <%- include("footer") -%>


